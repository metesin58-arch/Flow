default_platform(:ios)

platform :ios do
  desc "Build the iOS app into an IPA"
  lane :build do
    setup_circle_ci

    # Clean the key content to handle CI environment variable mangling
    key_content = ENV["APP_STORE_CONNECT_KEY_CONTENT"]
    if key_content
      # Replace literal "\n" strings with actual newlines
      key_content = key_content.gsub("\\n", "\n")
      # Ensure headers are present if the user only pasted the body
      unless key_content.include?("-----BEGIN PRIVATE KEY-----")
        key_content = "-----BEGIN PRIVATE KEY-----\n#{key_content}\n-----END PRIVATE KEY-----"
      end
    end

    # Authenticate with App Store Connect API
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: key_content,
      duration: 1200,
      in_house: false
    )

    # Automatic signing (get latest certs and profiles)
    get_certificates(api_key_path: api_key)
    get_provisioning_profile(api_key_path: api_key, bundle_id: "com.flowify.game")

    # Build the IPA
    build_app(
      workspace: "App.xcworkspace",
      scheme: "App",
      configuration: "Release",
      output_directory: "./build",
      output_name: "App.ipa",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.flowify.game" => "match AppStore com.flowify.game" # Fastlane managed name
        }
      }
    )
  end
end
